<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_profil"
    tools:context=".profil_teacher">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="34dp"
            android:layout_height="42dp"
            android:layout_gravity="start"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Profil"
            android:textColor="@color/back_color"
            android:textSize="30dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profil_img2"
            android:layout_width="196dp"
            android:layout_height="192dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/student_icon"
            android:background="@drawable/circular"
            />

        <ImageView
            android:id="@+id/edit_profil_img2"
            android:layout_width="69dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:onClick="openGallery2"
            android:src="@drawable/edit"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/fullNameStudent"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Full Name"
            android:textColor="@color/button_color"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Program:"
            android:textColor="@color/button_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/program"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textColor="@color/button_color"
            android:textColorHint="@color/button_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester:"
            android:textColor="@color/button_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/semester"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textColor="@color/button_color"
            android:textColorHint="@color/button_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gmail :"
            android:textColor="@color/button_color"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/gmail"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:hint="enter your gmail"
            android:textColor="@color/button_color"
            android:textColorHint="@color/button_color"
            android:textSize="20dp" />


    </LinearLayout>
</ScrollView>
