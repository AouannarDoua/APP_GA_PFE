<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Details_filieres">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:id="@+id/class_program_textview"
                android:layout_width="420dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/custom_background"
                android:elevation="4dp"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:text="Program"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:fontFamily="@font/timmana"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="390dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/logoest">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/timmana"
            android:text="Training Objectives"
            android:textAlignment="center"
            android:textColor="@color/app_color"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/gb"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <TextView
                android:id="@+id/obj"
                android:layout_width="360dp"
                android:layout_marginLeft="20dp"
                android:layout_height="240dp"
                android:fontFamily="@font/merriweatherregular"
                android:textColor="@color/black"
                android:text="Texte dans le ScrollView 1" />
      </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Career Opportunities"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/app_color"
            android:fontFamily="@font/timmana"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gb">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/formation"
                android:layout_width="360dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/merriweatherregular"
                android:text="Texte dans le ScrollView 2"
                android:textColor="@color/black" />
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modular organization of the curriculum"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/app_color"
            android:fontFamily="@font/timmana"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/scheduleRadioGroup"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="S1"
                android:textSize="20dp"
                android:theme="@style/Radiobuttonstyle" />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="S2"
                android:textSize="20dp"
                android:theme="@style/Radiobuttonstyle"

                />

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="S3"
                android:textSize="20dp"
                android:theme="@style/Radiobuttonstyle" />

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:theme="@style/Radiobuttonstyle"
                android:text="S4" />
        </RadioGroup>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gb">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <TextView
                    android:id="@+id/semestre"
                    android:layout_width="360dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="280dp"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/merriweatherregular"
                    android:text="semestre" />
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white">

            </LinearLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>